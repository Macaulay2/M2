#! /bin/sh
PREFIX=@prefix@
M2HOME="$PREFIX/share/Macaulay2/@PACKAGE_VERSION@"
M2LIB="$PREFIX/lib/Macaulay2/@PACKAGE_VERSION@"
export M2HOME
EXE="$M2LIB/libexec/Macaulay2"
DATA="$M2LIB/libexec/Macaulay2-`uname -m |sed s=/=-=g`-data"
SETUP="$M2HOME/m2/setup.m2"
if [ -f "$DATA" ]
then exec "$EXE" "-e loaddata \"$DATA\"" -- "-e runStartFunctions()" "$@"
else exec "$EXE" -ephase=1 "$SETUP" -ephase=0 "-e runStartFunctions()" "$@"
fi
