#!/bin/sh -e
case "$1" in
    configure)
	/usr/bin/M2 --dumpdata
	for p in /usr/share/Macaulay2/*.m2
	do f="/usr/share/info/`basename $p .m2`.info"
	   if [ -f $f ] ; then install-info --quiet --info-dir="/usr/share/info" "$f" ; fi
	done ;;
    abort-upgrade|abort-remove|abort-deconfigure) ;;
    *) echo "postinst called with unknown argument \`$1'" >&2
       exit 1 ;;
esac
