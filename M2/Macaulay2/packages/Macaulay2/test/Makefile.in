# @configure_input@

VPATH = @srcdir@

# DOTS is the path to M2/Macaulay2 from this directory
DOTS = ../../..
include $(DOTS)/../include/config.Makefile

SRCDIR = @srcdir@
include Makefile.test

all check clean ::
	$(MAKE) -k -C slow $@

all check clean ::
	$(MAKE) -k -C engine $@

ifneq "@DUMPDATA@" "no"
RESULTS += dumpdata.out
endif

distclean ::
	$(MAKE) -k -C engine $@
	$(MAKE) -k -C slow $@

docStructure.out : docStructure.m2

Makefile : Makefile.in; cd $(DOTS)/..; ./config.status Macaulay2/packages/Macaulay2/test/Makefile

status ::
	$(MAKE) -C engine $@
	$(MAKE) -C slow $@
	: $(MAKE) -C goals $@
	: $(MAKE) -C gigantic $@

MIKE_TESTS := $(wildcard @srcdir@/mt-*.m2)
MIKE_RESULTS := $(patsubst @srcdir@/%.m2, %.out, $(MIKE_TESTS))
mike-tests: $(MIKE_RESULTS) ; grep system $^ 

