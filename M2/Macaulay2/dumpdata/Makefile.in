# @configure_input@
.PHONY : all clean distclean install check default
default: all check
include ../../config.Makefile
VPATH = @srcdir@
all::
check::
checkit: checkit.o libdump.a
map.o: map.h file.h std.h warning.h
map.o: map-solaris.c map-linux.c
dumpdata.o: dumpdata.h map.h warning.h std.h
checkit.o: dumpdata.h std.h
file.o: std.h
warning.o: warning.h std.h
gdb: checkit; gdb checkit
TAGS:; etags *.h *.c
clean::; rm -f *.o checkit core check-data *.a libdump.a
LIBS :=
# LIBS += mmap.o
# LIBS += write.o
$(LIBS): /usr/lib/libc.a; $(AR) x $< $@	
libdump.a: libdump.a(file.o warning.o map.o dumpdata.o $(LIBS))
	ranlib libdump.a

ifneq "$(DUMPDATA)" "no"
all:: checkit
check:: test1
endif

test1: checkit
	./checkit dump "hi there"
	./checkit load "look!"
	touch "$@"
clean ::; rm -f "$@"

distclean : clean
	rm -f Makefile
