VPATH = @srcdir@
DIRS = 
TARGETS = all clean distclean check
$(foreach d,$(DIRS),					\
	$(foreach t, $(TARGETS),			\
		$(eval $t: $t-in-$d)			\
		$(eval $t-in-$d:; $$(MAKE) -C $d $t)	\
		$(eval .PHONY: $t $t-in-$d)))
Makefile : Makefile.in; cd ../..; ./config.status Macaulay2/kernel/Makefile
