include ../../config.Makefile
VPATH = @srcdir@
INSTALL = @INSTALL@
INSTALL_PROGRAM = $(INSTALL)
INSTALL_DATA = $(INSTALL)

# LDFLAGS =
# CFLAGS =

CPPFLAGS += -I../include
EXES := echoout timestmp restart update
ifeq ($(OS),Linux)
EXES += screen
endif

ifeq "$(GCC)" "yes"
CFLAGS += -Wall
endif

.PHONY : all clean distclean wc

all:: $(EXES)
update.o : restart.h
clean :; rm -f $(EXES) *.o $(EXES:=.exe) $(EXES:=.obj)
../bin/linkexec : linkexec ; cp -a $< $@

ifeq "$(OS)" "Windows-95-98-NT"
all:: ../setup.exe
../setup.exe : setup
	cp setup.exe ..
endif

wc:; wc -l *.c *.h

distclean : clean
	rm -f Makefile
