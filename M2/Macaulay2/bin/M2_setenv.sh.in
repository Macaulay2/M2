#! /bin/sh
# We assume that @ pre_bindir @/.. is ${pre_exec_prefix} (see configure.ac)
case "@host_os@" in
   cygwin) export PATH="$1"/../@tail_librariesdir@:$PATH ;;
  darwin*) # Mac OS X:
           export DYLD_LIBRARY_PATH="$1"/../@tail_librariesdir@:$DYLD_LIBRARY_PATH ;;
        *) export   LD_LIBRARY_PATH="$1"/../@tail_librariesdir@:$LD_LIBRARY_PATH ;;
esac

