# @configure_input@
include ../../include/config.Makefile
VPATH = @srcdir@
BOOKNAME = Macaulay2-@PACKAGE_VERSION@-book

DVIPSFLAGS = -z
TEX=latex

all:
check:

%.bux : %.tex
	$(TEX) $*
	makeindex $*.idx
	mv $*.dvi $*-prelim.dvi
	cp $*.aux $*.bux
.PRECIOUS: %.bux
%.bbl : %.bux
	cp $*.bux $*.aux
	bibtex $*
%.dvi : %.tex
%.dvi : %.bbl
	$(TEX) $*
	makeindex $*.idx
	if grep -s "Rerun to get cross-references right." $*.log; \
	then $(TEX) $*; \
	     makeindex $*.idx ; \
	fi
%.ps : %.dvi
	dvips $(DVIPSFLAGS) $< $(OUTPUT_OPTION)
	rm -f body.tmp head.tmp

%.pdf : %.tex
	pdf$(TEX) $*
	makeindex $*.idx
	pdf$(TEX) $*

