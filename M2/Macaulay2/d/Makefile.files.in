M2_DFILES += evaluate.d
ifeq (@MYSQL@,yes)
M2_DFILES += mysql.d
M2_SRCFILES += mysqldummy.d
else
M2_SRCFILES += mysql.d
M2_DFILES += mysqldummy.d
endif
M2_DFILES += pthread.d
