M2_DFILES += gmp.d
M2_DFILES += engine.dd
ifeq (@XML@,yes)
M2_DFILES += xml.d
M2_LASTCFILES += xml-c.c
else
M2_SRCFILES += xml.d xml-c.c
endif
M2_DFILES += stdio0.d
