# @configure_input@
include ../../include/config.Makefile
VPATH = @srcdir@

# export LD_LIBRARY_PATH=../lib

TESTRESULTS := $(patsubst %.m2, %.okay, $(wildcard @srcdir@/*.m2))

.PHONY : all clean distclean install check default

all:: $(TESTRESULTS)

distclean :: clean

$(TESTRESULTS) : ../libexec/Macaulay2

%.okay : %.m2
	@ echo testing $<
	@ env M2HOME=.. ../libexec/Macaulay2 -silent $< '-e exit 0'
	@ touch $@

clean  :	
	rm -f *.okay

distclean ::; rm -f Makefile

