TOPDIR = ../..
include $(TOPDIR)/config.Makefile
srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = $(srcdir)
INSTALL = @INSTALL@
INSTALL_PROGRAM = $(INSTALL)
INSTALL_DATA = $(INSTALL)

# export LD_LIBRARY_PATH=../lib

TESTRESULTS := $(patsubst %.m2, %.okay, $(wildcard *.m2))

all:: $(TESTRESULTS)

$(TESTRESULTS) : ../libexec/Macaulay2

%.okay : %.m2
	@ echo testing $<
	@ ../libexec/Macaulay2 -silent $< '-e exit 0'
	@ touch $@

clean  :	
	rm -f *.okay

distclean : clean
	rm -f Makefile

allfiles : *.m2 Makefile
	echoout $^ >allfiles
