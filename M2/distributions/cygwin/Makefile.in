# @configure_input@
# see http://cygwin.com/setup.html for info on making cygwin packages

include ../../include/config.Makefile
VPATH = @srcdir@

# override this on the make command line, as needed!
DISTRIBUTION = @DISTRIBUTION@

prefixtail  := $(shell basename @prefix@)
prefixdir   := $(shell dirname @prefix@)
ifeq ($(prefixdir),/)
prefixdir = /.
endif

DISTFILES := server/Macaulay2/@package@-$(DISTRIBUTION).tar.bz2 \
	     server/Macaulay2/@package@-$(DISTRIBUTION)-src.tar.bz2 \
	     server/Macaulay2/setup.hint

all pre-install :: server/Macaulay2 $(DISTFILES) server/setup.ini tidy
	@ echo "============================================================================="
	@ echo "the cygwin package files have been prepared in cygwin/server"
	@ echo "============================================================================="
server/setup.ini : $(DISTFILES)
	PATH=`cd @srcdir@; pwd`:$(PATH) $(MAKE) -C server setup.ini
server/Macaulay2 : ; $(MKDIR_P) $@

TIDY = yes
ifeq ($(TIDY),yes)
tidy :
	rm -rf files
else
tidy :
endif

T=tar --create --mode=a+rX,og-ws --exclude='.nfs*' --exclude='Macaulay2-*-data' --file=-

.prepared : server/Macaulay2 postinstall.sh preremove.sh
	set -x ; if [ -d files ] ; then mv files junk ; rm -rf junk & fi
	mkdir files
	$(MKDIR_P) files$(prefixdir)
	$(T) -C @pre_exec_prefix@ . | @FAKEROOT@ tar xzfp - -C files$(prefixdir)
	$(T) -C @pre_prefix@      . | @FAKEROOT@ tar xzfp - -C files$(prefixdir)
	mv files$(prefixdir)/@package@ files$(prefixdir)/$(prefixtail)
	cd files@prefix@ && rm -f INSTALL encapinfo postinstall preremove
	$(MKDIR_P) files/etc/postinstall files@prefix@
	@INSTALL_PROGRAM@ postinstall.sh files/etc/postinstall/@PACKAGE_TARNAME@.sh
	$(MKDIR_P) files/etc/preremove files@prefix@
	@INSTALL_PROGRAM@ preremove.sh files/etc/preremove/@PACKAGE_TARNAME@.sh
ifneq (@FAKEROOT@,)
	@FAKEROOT@ chown -R root.root files
endif

server/Macaulay2/@package@-$(DISTRIBUTION).tar.bz2 : .prepared
	(cd files && @FAKEROOT@ tar cjf - *) >$@

libraries-used : .prepared
	cygcheck files@prefix@/@bindir@/M2@EXE@ \
	| sed -e 's/^  *//' \
	| dd conv=lcase \
	| sed 's=\\=/=g' \
	| egrep "(/lib/|/bin/).*\.dll$$" \
	| sed -e 's=.*/lib/=/lib/=' -e 's=.*/bin/=/bin/=' \
	| sort | uniq \
	| tee $@

packages-used : libraries-used
	cat libraries-used \
	| while read x ; do cygcheck -f $$x ; done \
	| sort | uniq \
	| sed 's/\([a-zA-Z0-9]*\)-\([0-9.]*\)-.*/\1 \2/' \
	| tee $@

setup.hint : setup.hint-base packages-used
	( set -e ; \
	  cat setup.hint-base ; \
	  echo -n "requires:" ; \
	  cat packages-used |while read pkg rel ; do echo -n " $$pkg" ; done ; \
	  echo ) | tee $@

server/Macaulay2/setup.hint : setup.hint server/Macaulay2 ; cp $< $@

ifeq (@SRCTARFILE@,)
@package@-$(DISTRIBUTION) : always
	rm -f $@
	ln -sf @srcdir@/../.. $@
src-files : always
	svn ls -R @srcdir@/../.. | egrep -v '/$$' | sed 's=^=@package@-$(DISTRIBUTION)/=' >$@
mkrt : src-files @package@-$(DISTRIBUTION)
ifneq (@FAKEROOT@,)
	cat src-files | @FAKEROOT@ xargs chown root.root
endif
server/Macaulay2/@package@-$(DISTRIBUTION)-src.tar.bz2 : server/Macaulay2 mkrt src-files
	@FAKEROOT@ tar cfj $@ --files-from=src-files
else
src-tree : @SRCTARFILE@
	rm -rf $@
	$(MKDIR_P) $@
	tar xzf $< -C $@
	rm -f @package@-$(DISTRIBUTION)
	ln -s srctree/* @package@-$(DISTRIBUTION)
mkrt : src-tree
ifneq (@FAKEROOT@,)
	@FAKEROOT@ chown -R root.root src-tree
endif
server/Macaulay2/@package@-$(DISTRIBUTION)-src.tar.bz2 : server/Macaulay2 mkrt
	@FAKEROOT@ tar cfj $@ @package@-$(DISTRIBUTION)/.
endif

pre-install :: Macaulay2.README
	@INSTALL@ -d @prefix@/share/doc/Cygwin
	@INSTALL@ Macaulay2.README @prefix@/share/doc/Cygwin

upload :; rsync --verbose --compress --archive --rsh='ssh -x -a' server/. u00:to/Macaulay2/Repositories/cygwin-test
clean ::; rm -rf files src-files
distclean clean ::; $(MAKE) -C server $@
distclean :: clean; rm -f Makefile Macaulay2.README setup.hint
Makefile : Makefile.in; cd ../..; ./config.status distributions/cygwin/Makefile
postinstall.sh : postinstall.sh.in; cd ../..; ./config.status distributions/cygwin/postinstall.sh
preremove.sh : preremove.sh.in; cd ../..; ./config.status distributions/cygwin/preremove.sh
setup.hint-base : setup.hint-base.in; cd ../..; ./config.status distributions/cygwin/setup.hint-base
Macaulay2.README : Macaulay2.README.in; cd ../..; ./config.status distributions/cygwin/Macaulay2.README

