# populate the directory
export VERSION=0.9.9
mkdir tmp
cd tmp
cp ../ReadMe-MacOSX.rtf .
(cd /capybara/encap; tar cf - Macaulay2-$VERSION) | tar xf -
mv Macaulay2-$VERSION Macaulay2
cp ../ReadMe-MacOSX.rtf Macaulay2/
cp ../setup Macaulay2/
rm Macaulay2/bin/M2-emacs
rm Macaulay2/bin/M2-load-libs
rm Macaulay2/bin/M2-help
strip Macaulay2/bin/M2
cd .. # to original directory
echo "about to do hdiutil"
# comment one of these out
echo `pwd`
hdiutil create -srcfolder tmp -volname Macaulay2-$VERSION-ppc Macaulay2-$VERSION-macosx-ppc.dmg
#hdiutil create -srcfolder tmp -volname Macaulay2-$VERSION-i386 Macaulay2-$VERSION-macosx-i386.dmg

