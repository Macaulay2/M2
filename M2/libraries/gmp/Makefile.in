VPATH = @srcdir@
RELAX = yes
URL = ftp://ftp.gnu.org/gnu/gmp
VERSION = 6.0.0a
TARDIR = gmp-6.0.0
TAROPTIONS = --bzip2
TARFILE = $(LIBNAME)-$(VERSION).tar.bz2
LICENSEFILES = README COPYING* doc/gmp.info*

CONFIGOPTIONS += --enable-cxx
ifeq (@SHARED@,no)
CONFIGOPTIONS += --disable-shared
endif

