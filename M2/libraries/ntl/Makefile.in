# @configure_input@
# http://www.shoup.net
# a library for doing number theory
VERSION = 5.4.2
TARDIR = ntl-$(VERSION)
BUILDDIR = $(TARDIR)/src
TARFILE = ntl-$(VERSION).tar.gz
URL = http://shoup.net/ntl
CONFIGURECMD = ./configure \
	PREFIX=@FINALPREFIX@/@librariesdirtail@ \
	LIBDIR=@FINALPREFIX@/@librariesdirtail@/lib \
	INCLUDEDIR=@FINALPREFIX@/@librariesdirtail@/include \
	DOCDIR=@FINALPREFIX@/@librariesdirtail@/share/doc \
	NTL_GMP_LIP=on NTL_STD_CXX=on NTL_NO_INIT_TRANS=on NTL_CXX_ONLY=on \
	CC="@CXX@" \
	CXX="@CXX@" \
	CFLAGS="$(CFLAGS)" \
	CXXFLAGS="$(CXXFLAGS)" \
	CPPFLAGS="$(CPPFLAGS)" \
	LDFLAGS="$(LDFLAGS)"

INSTALLOPTIONS = \
	PREFIX=$(PREFIX)/@librariesdirtail@ \
	LIBDIR=$(PREFIX)/@librariesdirtail@/lib \
	INCLUDEDIR=$(PREFIX)/@librariesdirtail@/include \
	DOCDIR=$(PREFIX)/@librariesdirtail@/share/doc

INSTALLCMD     = $(MAKE) $(INSTALLOPTIONS) install
include ../Makefile.library
check :: ; $(MAKE) -C $(BUILDDIR) check
Makefile : @srcdir@/Makefile.in ; cd ../.. && ./config.status libraries/ntl/Makefile
