# @configure_input@
include ../include/config.Makefile
VPATH = @srcdir@
DEPENDS = yes
finalprefix=@FINALPREFIX@
prefixtail=$(shell echo $(finalprefix) | sed 's=^/==')
prefixdir=$(shell dirname $(finalprefix))
############################## main targets
all install :: ../$(PKG_RPM)
../$(PKG_RPM) : Macaulay2.spec ; cd tmp ; rpmbuild -bb Macaulay2.spec
Macaulay2.spec : Macaulay2.spec.in ; cp $^ $@
try-alien : ../$(PKG_DEB) ; fakeroot alien --generate --scripts --to-rpm $^
clean ::
distclean : clean; rm -f Makefile
Makefile : Makefile.in; cd ..; ./config.status rpm/Makefile

