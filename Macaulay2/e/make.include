# -*- makefile -*-
# @configure_input@

%.o : %.cpp; $(COMPILE.cc) $(OUTPUT_OPTION) $< -Wno-old-style-cast

CPPFLAGS += -I../../../include
CPPFLAGS += -I../../../libraries/local/include
CPPFLAGS += -I../../util
CPPFLAGS += -I..

CXXFLAGS += $(DEBUGFLAGS)
CFLAGS   += $(DEBUGFLAGS)

ifeq "$(SHARED)" "yes"
CXXFLAGS += -fPIC
endif

LIBGB      = libgb.a
PRE.cc   = $(COMPILE.cc) -E 
