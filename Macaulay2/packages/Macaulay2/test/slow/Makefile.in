# @configure_input@
# DOTS is the path to M2/Macaulay2 from this directory
DOTS = ../../../..
include $(DOTS)/../include/config.Makefile
VPATH = @srcdir@

ifeq "@DEBUG@" "no"
MLIMIT = 400000
VLIMIT = 400000
TLIMIT = 300
else
# give the debug version more time and space
MLIMIT = 600000
VLIMIT = 600000
TLIMIT = 450
endif

SRCDIR = @srcdir@
include ../Makefile.test

Makefile : Makefile.in; cd $(DOTS)/..; ./config.status Macaulay2/test/slow/Makefile

