# @configure_input@
include ../../include/config.Makefile
VPATH = @srcdir@
DEPENDS = yes
############################## main target
all :: compat.h
all :: ../libexec/Macaulay2$(EXE)
############################## useful targets
all-c-files ::
remove-c-files ::
##############################
.PHONY : all-c-files remove-c-files
############################## files
# the names on these lines should be in sequence from most dependent to
# least dependent so that "make" can remake the *.dep makefiles

PROJECT := 
PROJECT += interp.d
PROJECT += texmacs.d
# PROJECT += mp.d
# PROJECT += actorsX.d
PROJECT += actors5.d actors4.d actors3.d actors2.d actors.d
PROJECT += objects.d
PROJECT += struct.d
PROJECT += GC.d
PROJECT += convertr.d basic.d binding.d
PROJECT += parser.d lex.d tokens.d
PROJECT += arith.d
# PROJECT += gmp.d
PROJECT += err.d
PROJECT += stdiop.d
PROJECT += getline.d
PROJECT += ctype.d
PROJECT += stdio.d
PROJECT += nets.d
PROJECT += varstrin.d
PROJECT += strings.d 
PROJECT += GB.d
PROJECT += system.d
PROJECT += C.d
##############################
ifeq "$(DEPENDS)" "yes"
include $(PROJECT:.d=.dep)
endif
##############################
DNAMES := $(PROJECT)
############################## more files
WRAPPERS := scclib.c getpagesize.h gc_cpp.cc memdebug.c memdebug.h
#############################################################################
SRCFILES := $(WRAPPERS) $(DNAMES)
SCRIPTS := reverse
WC1FILES := $(SCRIPTS) $(SRCFILES) \
	scc.gdb COPYRIGHT \
	bignum.h bignum.c alloca.h \
	configure remake probe.c sizes.c
############################## rules
SCC1 := ../c/scc1
.SUFFIXES: .d .sig .dep .res .test .m2
.PHONY : clean all check

SCCFLAGS =

ifeq "$(OPTIMIZE)" "yes"
SCCFLAGS += -O
endif

# SCCFLAGS += -spincursor

ifeq "$(GCC)" "no"
SCCFLAGS += -nogcc
endif

%.dep : %.d
	$(SCC1) -dep -J. $<
	mv $*.dp $*.dep
	../util/update $*.sg $*.sig
%.c   : %.d
	$(SCC1) $(SCCFLAGS) +gc -J. -noline $<
%.oo  : %.d
	$(SCC1) $(SCCFLAGS) +gc -J. $<
	$(COMPILE.c) -Wno-unused -Wno-uninitialized $*.c $(OUTPUT_OPTION)
	rm $*.c
############################## flags

PURIFYCMD :=
# PURIFYCMD := purify -always-use-cache-dir

CPPFLAGS += -I../../include -I@srcdir@ -I. -I../util
CFLAGS += $(DEBUGFLAGS)

# we can't do this because our manufactured c files have lots of unused labels
# CFLAGS  += -Wall -Wshadow -Wcast-qual

ifeq "$(DEBUG)" "TRUE"
CFLAGS += -DGC_DEBUG
endif

ifeq "$(CC)" "cl"
CFLAGS += -Za -W0
endif

CXXFLAGS += $(WARNINGS)

ifeq ($(OS),Linux)
## - use this to get a memory map listing from the gnu linker
LDFLAGS  += -Wl,-Map,mapfile
endif

ifeq ($(OS) $(CC),Windows-95-98-NT gcc)
## - use this to get a memory map listing from the gnu linker
LDFLAGS  += -Wl,-Map,mapfile
endif

ifeq ($(OS),SunOS)
## - use this to get a memory map listing from the linker
##   if using Sun's ld.  Sigh, it comes to stdout.
# LDFLAGS  += -Wl,-m
endif

#################################

ifdef includeX11
CPPFLAGS += -DincludeX11
LDLIBS += -lX11
endif

## we use one of these in scclib.c
# libdbm2.a is our own database manager
# libgdbm.a is the gnu database manager
# libndbm.a is the new database manager

# hopefully, this will prevent us from getting the buggy version of 
# __underflow
# LDLIBS+= -lc

ifeq "$(STATIC)" "yes"
LDFLAGS += -static
ifeq ($(OS),Linux)
# this is for gc somehow, see the end of gc/config.h
LDFLAGS += -Wl,-defsym,_DYNAMIC=0
endif
endif

ALLOBJ :=

ifeq ($(OS),SunOS)
LDLIBS += -lsocket -lnsl
endif

ifeq "$(STATIC)" "yes"
ifeq ($(OS),Linux)
# so I tried it, but it doesn't work...
# ALLOBJ += /usr/lib/libnsl.a /usr/lib/libnss_*.a
endif
endif

#ifeq ($(OS),Linux)
#LDLIBS += -lieee
#endif

# -lsunmath makes suns obey ieee for floating point operations, at
# -liberty is /usr/local/lib/libiberty.a, and it has random() in it
# least under solaris
ifeq ($(OS),SunOS)
# LDLIBS += -lsunmath -liberty
endif

ifeq ($(OS),MS-DOS)
LDLIBS += -lgpp
else

#	We used to -lc in here, but it's for a good reason.
#	Under linux, I have a modern version 2.8.0 of libstdc++ that defines
#	the routine _IO_init which is called by sprintf, indirectly.  My sprintf
#	comes from the old libc, and the _IO_init is incompatible, for some reason.

# 	We used to have -lg++ here, too, (before -lc), but it's obsolete now, and 
#	has been incorporated into libstdc++ with version 2.8.1.1.
endif

# but on some machines, with non-gnu ld being used, libiostream is
# not used automatically, so put it in anyway.
# LDLIBS += -liostream

############################## compiling

ifeq "$(CC)" "cl"
compat.c : ../msdos/compat.c; cp $< $@
compat.h : ../msdos/compat.h; cp $< $@
else
compat.c compat.h : configure ../../include/config.h
	FLAGS="$(LDFLAGS) $(LOADLIBES) $(LDLIBS)" @srcdir@/configure
endif

M2lib.o scclib.o : compat.h
M2lib.o scclib.o : \
	../c/compat.h ../c/compat.c types.h memdebug.h ../../include/config.h
memdebug.o scclib.o actors5.o gc_cpp.o  : memdebug.h
gc_cpp.o : ../../include/config.h

allc : $(PROJECT:.d=.c) tmp_init.c


MISCO := M2lib.o scclib.o tmp_init.o memdebug.o initgmp.o tmpl_inst.o version.o

# MISCO += factoryseed.o

ifeq ($(OS),Darwin)
# The file libfac_tmpl_inst.o needs to be extracted from libfac.a
# for some mysterious reason.  I either don't understand template
# instantiation on darwin, or it is doing it wrong.
# The macaulay2 fink package does this automatically before this
# compilation starts.  If you need to do it by hand:
#	ar x $(prefix)/lib/libfac.a tmpl_inst.o
#	mv tmpl_inst.o libfac_tmpl_inst.o
# ftmpl_inst.cc is no longer needed?
MISCO += libfac_tmpl_inst.o 
endif

ifeq ($(GC_FOR_NEW),yes)
# replace the builtin c++ memory allocation routines by calls to gc.
MISCO += gc_cpp.o
endif

ifeq ($(OS),Linux)
# MISCO += readline.o
# LIBRARYOPTIONS += -ldl -lncurses
# LDFLAGS += -rdynamic
endif

ALLOBJ += $(PROJECT:.d=.oo) 
ALLOBJ += $(MISCO)
ALLOBJ += ../e/libgb.a

ifeq "$(DUMPDATA)" "yes"
LOADLIBES += -L../dumpdata
LIBRARYFILES += ../dumpdata/libdump.a
LIBRARYOPTIONS += -ldump
endif

ifneq "$(CC)" "cl"
# ALLOBJ += compat.o
endif

ifeq ($(OS),Linux)
# The maintainers of linux' libstdc++ unwisely decided to incorporate
# their own private versions of routines from libc in their library!
# Unforgiveable, since the symbols defined differ (of course).
# ALLOBJ += putc.o
putc.o : /usr/lib/libc.a; ar x $^ $@
endif

ifeq ($(OS),Linux)
# ALLOBJ += malloc.o
# LDFLAGS += -rdynamic
malloc.o : /usr/lib/libc.a; ar x $^ $@
endif
################################# c file production for porting
ALLC := $(PROJECT:.d=.c)
all-c-files :: $(ALLC)
remove-c-files ::; rm -rf $(ALLC)
c-files.tar :: $(ALLC)
	tar cf $@ $(ALLC)
##############################

UTIL := ../util/

tmp_init.o : tmp_init.c
tmp_init.c : $(PROJECT)
	 $(UTIL)timestmp >tmp
	@ echo "echoout '>>tmp' ..."
	@ $(UTIL)echoout '>>tmp' $(foreach f, $(PROJECT:.d=), 'void $(f)__prepare();') 
	 $(UTIL)echoout '>>tmp' 'char current_date[] = __DATE__;'
	 $(UTIL)echoout '>>tmp' 'char current_time[] = __TIME__;'
	 $(UTIL)echoout '>>tmp' 'int main_inits() {'
	@ echo "echoout '>>tmp' ..."
	@ $(UTIL)echoout '>>tmp' $(foreach f, $(PROJECT:.d=), '   $(f)__prepare();')
	 $(UTIL)echoout '>>tmp' '   return 0;}'
	mv tmp tmp_init.c

.._c_compat.c: ../c/compat.c; cp $^ $@
.._c_compat.h: ../c/compat.h; cp $^ $@

c-port: $(ALLC) tmp_init.c gc_cpp.cc scclib.c memdebug.c memdebug.h \
		compat.c compat.h \
		.._c_compat.c .._c_compat.h
	tar cfz /tmp/c-port.tgz $^

interpret.a : $(ALLOBJ)
	ar rcs $@ $^ tmp_init.o
############################## probe memory for dumpdata
probe : probe.c probe.h
	$(CC) -g -static -I../../include probe.c $(OUTPUT_OPTION)
probe.h :
	echo "/* insert temporary fixes here */" >$@
test-probe : addresses
addresses : probe
	nm probe |grep -v "gcc2_compiled\|gnu_compiled\0| \." >syms
	./probe abcdefghijklmnopqrstuvwxyzabcdefghijklmnopqrstuvwxyzabcdefghijklmnopqrstuvwxyz b c d >> syms
	sort syms > addresses
	rm syms
clean ::; rm -f addresses
###################### libraries

ifneq ($(OS),Darwin)
ifeq "$(GCC) $(STATIC)" "yes no"
LIBRARYOPTIONS += -Wl,-Bstatic
endif
endif

# statically linked libraries
LIBRARYOPTIONS += -lfac
LIBRARYOPTIONS += -lcf
LIBRARYOPTIONS += -lgmp
LIBRARYOPTIONS += -lgc
LIBRARYOPTIONS += -lgdbm

# we avoid successfully using streamio, but we need the personality function
LIBRARYOPTIONS += -lstdc++

ifneq ($(OS),Darwin)
ifeq "$(GCC) $(STATIC)" "yes no"
LIBRARYOPTIONS += -Wl,-Bdynamic
endif
endif

# ftmpl_inst.o: $(prefix)/include/templates/ftmpl_inst.cc
# 	$(CXX) $(CXXFLAGS) $(CPPFLAGS) $(TARGET_ARCH) -c $(OUTPUT_OPTION) $<

LDLIBS := $(LIBRARYOPTIONS) $(LDLIBS)

######################

ifeq "$(CC)" "cl"
LINK_OUTPUT_OPTION = -link -out:$@.exe
else
LINK_OUTPUT_OPTION = $(OUTPUT_OPTION)
endif

ifneq "$(CC)" "cl"
LDLIBS += -lm
endif

../libexec/Macaulay2$(EXE) : $(ALLOBJ) $(LIBRARYFILES)
	rm -f $@
	time $(PURIFYCMD) $(CC) $(LDFLAGS) $(ALLOBJ) $(LOADLIBES) $(LDLIBS) $(LINK_OUTPUT_OPTION)
	$(STRIPCMD) $@

t_main.o : types.h
t : t_main.o gmp.o stdio.o strings.o system.o varstrin.o nets.o scclib.o C.o t.o
	$(CC) $(LDFLAGS) $^ $(LDLIBS) $(OUTPUT_OPTION)

all:: TAGS

TAGS: Makefile
	@ echo making TAGS
	@ $(UTIL)echoout -r2 '>TAGS' $(foreach i, $(SRCFILES) M2lib.c types.h,  $(i),0)

clean ::
	rm -f *.log *.sym *.out *.o *.a *.oo *.sig *.dep mapfile \
		$(DTESTS:.d=) *_inits.c *.sg *.sgn \
		$(DNAMES:.d=.c) TAGS \
		core core.* compat.c compat.h c-files.tar tmp_init.c ../libexec/Macaulay2$(EXE)
distclean : clean
	rm -f Makefile

Makefile : Makefile.in
	cd ../..; ./config.status Macaulay2/d/Makefile
