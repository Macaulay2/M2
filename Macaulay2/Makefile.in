# @configure_input@
############################### targets to use
.PHONY: check all clean initialize book distclean justM2
################################# prologue
all ::
justM2 all :: initialize

include ../include/config.Makefile
VPATH = @srcdir@
################################# .
prefix := @pre_prefix@
pre-install :: @docdir@ @docdir@ \
	   @docdir@/COPYING \
	   @docdir@/README \
	   @docdir@/LAYOUT

@docdir@:; $(MKDIR_P) "$@"
@docdir@/COPYING : COPYING ; @INSTALL_DATA@ $< "$@"
@docdir@/LAYOUT  : LAYOUT  ; @INSTALL_DATA@ $< "$@"
@docdir@/README  : README  ; @INSTALL_DATA@ $< "$@"

################################# srcdir
initialize :: srcdir
srcdir :; echo "@srcdir@" >$@
clean::; rm -f srcdir
################################# cache
initialize :: cache
cache :; mkdir $@
distclean clean ::; rm -rf cache
pre-install :: @packagecacheCore@
@packagecacheCore@:; @INSTALL@ -d "$@"
################################# util
initialize::; $(MAKE) -C util all
distclean clean ::; $(MAKE) DEPENDS=no -C util $@
################################# c
distclean clean ::; $(MAKE) DEPENDS=no -C c $@
all justM2 ::; $(MAKE) -C c all
################################# e
all check justM2 initialize ::; $(MAKE) -C e DEPENDS=no initialize
justM2 ::; $(MAKE) -C e all
all ::; $(MAKE) -C e $@

# check ::; $(MAKE) -C e $@
check ::
	@ echo "---###################################----"
	@ echo "---#### disabled: make -C e check ####----"
	@ echo "---###################################----"

initialize distclean clean ::; $(MAKE) DEPENDS=no -C e $@
################################# dumpdata
ifeq "@DUMPDATA@" "yes"
justM2 ::; $(MAKE) -C dumpdata all
pre-install all check ::; $(MAKE) -C dumpdata $@
endif
distclean clean ::; $(MAKE) DEPENDS=no -C dumpdata $@
################################# compat
all clean distclean ::; $(MAKE) -C compat $@
################################# regex
all ::; $(MAKE) -C regex $@
clean distclean ::; $(MAKE) DEPENDS=no -C regex $@
################################# d
initialize ::; $(MAKE) DEPENDS=no -C d compat.h
### util/restart and util/update cooperate here:
justM2 all ::; util/restart d/restart.tmp $(MAKE) -C d all
distclean clean ::; $(MAKE) DEPENDS=no -C d $@
################################# bin
# obsolete
################################# basictests
check ::; $(MAKE) -C packages/Macaulay2Doc/basictests -k
distclean clean ::; $(MAKE) -C packages/Macaulay2Doc/basictests $@
################################# m2
pre-install distclean clean check justM2 all ::; $(MAKE) -C m2 $@
################################# test
check ::; $(MAKE) -C packages/Macaulay2Doc/test -k
distclean clean ::; $(MAKE) -C packages/Macaulay2Doc/test $@
################################# packages
all check pre-install clean distclean ::; $(MAKE) -C packages $@
################################# html-check-links
initialize::; $(MAKE) -C html-check-links all
pre-install ::; $(MAKE) DEPENDS=no -C html-check-links check
distclean clean ::; $(MAKE) DEPENDS=no -C html-check-links $@
################################# probe
clean distclean ::; $(MAKE) -C probe $@
################################# book, currently not made
book ::;  $(MAKE) -C book all
distclean clean ::; $(MAKE) -C book $@
################################# emacs
all ::;  $(MAKE) -C emacs all
pre-install distclean clean ::; $(MAKE) -C emacs $@
################################# man
all pre-install :: ; $(MAKE) -C man $@
################################# pre-install, at the end
all :: pre-install
################################# Makefile
Makefile : Makefile.in
	cd ..; ./config.status Macaulay2/Makefile
distclean::; rm -f Makefile
################################# final status messages
justM2 all clean distclean::
	@echo "-------- done making '$@' --------"
#################################
clean :: ; rm -f gmon.out

