################################# nondist
# print the files in the directory tree that are not part of the distribution
nondist :
	(Export; find . -name CVS -prune -o -type f -print ) | sort | uniq -u
################################# CVS
clean::
	find .  \( \
		   -type f -name '.#*' \
		-o -type d -name Release \
		-o -name '*.pdb' \
		\) -exec rm -r '{}' ';'
	rm -f M2.ncb M2.opt
