# @configure_input@
# http://www.shoup.net
# a library for doing number theory
VERSION = 5.4.1
TARDIR = ntl-$(VERSION)
BUILDDIR = $(TARDIR)/src
TARFILE = ntl-$(VERSION).tar.gz
URL = http://shoup.net/ntl
CONFIGURECMD = ./configure \
	PREFIX=@FINALPREFIX@/$(librariesRelDir) \
	LIBDIR=@FINALPREFIX@/$(librariesRelDir)/lib \
	INCLUDEDIR=@FINALPREFIX@/$(librariesRelDir)/include \
	DOCDIR=@FINALPREFIX@/$(librariesRelDir)/share/doc \
	NTL_GMP_LIP=on NTL_STD_CXX=on NTL_NO_INIT_TRANS=on NTL_CXX_ONLY=on \
	CC="$(CXX)" \
	CXX="$(CXX)" \
	CFLAGS="$(CFLAGS)" \
	CXXFLAGS="$(CXXFLAGS)" \
	CPPFLAGS="$(CPPFLAGS)" \
	LDFLAGS="$(LDFLAGS)"

INSTALLOPTIONS = \
	PREFIX=$(PREFIX)/$(librariesRelDir) \
	LIBDIR=$(PREFIX)/$(librariesRelDir)/lib \
	INCLUDEDIR=$(PREFIX)/$(librariesRelDir)/include \
	DOCDIR=$(PREFIX)/$(librariesRelDir)/share/doc

INSTALLCMD     = $(MAKE) $(INSTALLOPTIONS) install
include ../Makefile.library
check :: ; $(MAKE) -C $(BUILDDIR) check
Makefile : @srcdir@/Makefile.in ; cd ../.. && ./config.status libraries/ntl/Makefile
