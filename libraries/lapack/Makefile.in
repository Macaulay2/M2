# @configure_input@
VPATH = @srcdir@
include ../../include/config.Makefile
# http://www.netlib.org/lapack/
# documentation: http://www.netlib.org/lapack/lug/
URL = http://www.netlib.org/lapack
TARFILE = lapack.tgz
VERSION = 3.1.1
TARDIR = lapack-$(VERSION)
CONFIGURECMD = cp make.inc.example make.inc
# note: our package "blas" creates the library libf77blas.a
BUILDOPTIONS = PLAT= FORTRAN=g77 OPTS="-O2 -g" NOOPT= LOADER=g77 LOADOPTS= RANLIB=ranlib BLASLIB=-lf77blas
BUILDDIR = $(TARDIR)/SRC
# BUILDTARGET = all ../liblapack.so
BUILDTARGET = blaslib all
INSTALLCMD = install -d $(PREFIX)/lib && install $(BUILDDIR)/lapack.a $(PREFIX)/lib/liblapack.a
# PATCHFILE = patchfile
include @srcdir@/../Makefile.library
Makefile : Makefile.in ; cd ../.. && ./config.status libraries/lapack/Makefile
